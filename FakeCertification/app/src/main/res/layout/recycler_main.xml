<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FFFFFF">

  <android.support.v7.widget.RecyclerView
      android:id="@+id/rv_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
  </android.support.v7.widget.RecyclerView>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:layout_gravity="bottom"
      android:orientation="horizontal"
      android:weightSum="5"
      android:background="#25272A">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#161819">

      <ImageView
          android:layout_gravity="center"
          android:layout_width="29dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tab_1"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

      <ImageView
          android:layout_gravity="center"
          android:layout_width="25dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tab_2"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#125688">

      <ImageView
          android:layout_gravity="center"
          android:layout_width="26dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tab_3"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

      <ImageView
          android:layout_gravity="center"
          android:layout_width="26dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tab_4"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">
      <ImageView
          android:layout_gravity="center"
          android:layout_width="21dp"
          android:layout_height="wrap_content"
          android:src="@drawable/tab_5"/>

    </FrameLayout>
      </LinearLayout>

</FrameLayout>